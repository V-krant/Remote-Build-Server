<Window x:Class="PluggableRepoClient.Notifier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PluggableRepoClient"
        mc:Ignorable="d"
        Title="Notifier" Height="150" Width="300" WindowStartupLocation="CenterScreen"
         >
    <Grid>
        <Label Padding="30">
            <TextBlock TextWrapping="WrapWithOverflow" Name="displayText" FontSize="13" FontWeight="SemiBold"></TextBlock>
        </Label>
    </Grid>
</Window>
